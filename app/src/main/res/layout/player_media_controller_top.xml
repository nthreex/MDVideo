<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHalfTransparent"
    android:layoutDirection="ltr"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/player_exit"

        style="@style/playerPopupTopImageView"
        android:background="@drawable/player_icon_back"/>

    <View
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"/>

    <TextClock
        android:format24Hour="@string/player_system_time"
        android:layout_marginEnd="16dp"
        style="@style/playerPopupTextView"/>

    <ImageView
        android:id="@+id/player_subtitle"
        style="@style/playerPopupTopImageView"
        android:background="@drawable/player_icon_subtitle"/>
    <ImageView
        android:id="@+id/player_more"
        style="@style/playerPopupTopImageView"
        android:background="@drawable/player_icon_storage"/>
</LinearLayout>